<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <div class="card shadow">
            <div class="card-body">
                <form action="/campgrounds" method="POST" novalidate class="validated-form"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="campground[title]" required>
                        <div class="valid-feedback">
                            &#10003;
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="campground[location]" required>
                        <div class="valid-feedback">
                            &#10003;
                        </div>
                    </div>
                    <div class=" mb-3">
                        <label for="price" class="form-label">Campground Price</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="price-label">$</span>
                            </div>
                            <input type="text" class="form-control" placeholder="0.00" id="price" aria-label="price"
                                aria-describedby="price-label" name="campground[price]" required>
                            <div class="valid-feedback">
                                &#10003;
                            </div>
                        </div>

                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" id="description" name="campground[description]"
                            required></textarea>
                        <div class="valid-feedback">
                            &#10003;
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Choose Image(s)</label>
                        <div class="form-file">
                            <input class="form-control" type="file" id="image" name="image" multiple
                                onchange="previewMultiple(event)">
                            <label for="image" class="form-label custom-file-label" id="previewLabel"></label>
                        </div>
                        <div id="previewImg"></div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Add Campground</button>
                    </div>
                </form>
                <a href="/campgrounds">All Campgrounds</a>
            </div>
        </div>
    </div>
</div>